{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "outDir": "build",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "index.js",
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules",
    "__tests__",
    "ios",
    "android"
  ],
  "compileOnSave": true
}